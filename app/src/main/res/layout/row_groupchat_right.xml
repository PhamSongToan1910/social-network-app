<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/messageLayout"
        android:padding="5dp">
        <TextView
            android:id="@+id/timeTvGRC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="time"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/hoursTvGRC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeTvGRC"
            android:text="time"
            android:visibility="gone"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:textSize="12sp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImgGRC"
            android:layout_width="40dp"
            android:background="@drawable/firebase_logoo"
            android:visibility="gone"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/nameTvGRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:text="Name"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageTvGRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hoursTvGRC"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/sender_backimg"
            android:text="The message"
            android:textColor="@color/colorWhite" />
        <ImageView
            android:id="@+id/messageIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/hoursTvGRC"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/sender_backimg"
            android:src="@drawable/baseline_image_24"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>


</LinearLayout>